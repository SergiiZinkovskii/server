@model Restaurant.Domain.ViewModel.DishViewModel
@{
    var textTitle = Model?.Id == 0 ? "Change data" : "Add data";
    Layout = "_Layout";
}


<form asp-action="Save" enctype="multipart/form-data" id="formSaveProduct">
    <input asp-for="Id" hidden />
    <div asp-validation-summary="All" style="font-size:23px; font-family:Impact, serif" class="text-danger text-center"></div>
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="@Model.Name" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Name" required />
        </div>

        <div class="form-group col-md-4">
            <label asp-for="@Model.Price" class="col-form-label"></label>
            <input type="text" class="form-control" asp-for="@Model.Price" />
        </div>
    </div>

    <div class="row">
        <div class="form-group col-md-12">
            <label asp-for="@Model.Description" class="col-form-label"></label>
            <textarea type="text" class="form-control" asp-for="@Model.Description" required></textarea>
        </div>
    </div>
    <div class="row">
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="Category" class="col-form-label"></label>
                    <select asp-for="Category" class="form-control dish-type-select" data-types-url="@Url.Action("GetTypes", "Menu")"></select>
            </div>
        </div>

        <div class="form-group">
            <label>Fotos:</label>
            <input type="file" name="avatars" multiple>
        </div>
    </div>
    <button type = "submit" class=" btn btn-primary">ОК</button>
</form>


        